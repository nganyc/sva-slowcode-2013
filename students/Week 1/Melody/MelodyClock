void setup(){
  size(1000,500);

}

void draw(){ 
  background(200);

  int s = second();
  stroke(#FFFFFF);
  fill(#FFFF00);
  ellipse(width*.25,height*.5,s+50,s+50);
  
  int m = minute();
  stroke(#FFFFFF);
  fill(#FF9933);
  ellipse(width*.5,height*.5,m+50,m+50);
  
  int h = hour();
  stroke(#FFFFFF);
  fill(#FF66FF);
  ellipse(width*.75,height*.5,h+86,h+86);
   
}
